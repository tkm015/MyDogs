<% @entries.each do |e| %>
  <%= e.customer.name %>さん
<% end %>

<% if @messages.present? %>
  <% @messages.each do |m| %>
    <%= m.customer.name %>
    <%= m.message %>
    <%= m.created_at.strftime("%Y-%m-%d %H:%M") %>
    <% if m.customer == current_public_customer %>
      <%= form_with(model: @message, url: public_message_path(m), remote: true, method: :delete) do |f| %>
        <%= f.hidden_field :room_id, value: @room.id %>
        <%= f.submit '削除',data: { confirm: "本当に削除しますか？"} %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= form_for @message, url: public_messages_path(@room) do |f| %>
  <%= f.label :message, 'メッセージ' %>
  <%= f.text_area :message %>
  <%= f.hidden_field :room_id, value: @room.id %>
  <%= f.submit '送信' %>
<% end %>

