<div class="container">
  <h2>写真投稿</h2>
  <%= form_for @post, url: public_posts_path do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-group row">
  	  <div class="col-md-3">
 	      <%= f.label :dog_id, '対象のペット' %>
 	    </div>
 	    <div class="col-md-3">
 	      <%= f.collection_select :dog_id, @dogs, :id, :name, {prompt: "選択してください"},class: 'form-control' %>
 	    </div>
    </div>
 	  <div class="form-group row">
  	  <div class="col-md-3">
        <%= f.label :image, '写真' %>
      </div>
      <div class="col-md-3">
        <%= image_tag @post.image.url, id: :img_prev9 %><br>
 	      <%= f.file_field :image, id: :customer_img9 %>
        <script type="text/javascript">
            $(function() {
              function readURL(input) {
                if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
            $('#img_prev9').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
                }
            }
            $('#customer_img9').change(function(){
                readURL(this);
            });
          });
          </script>
 	    </div>
	  </div>
	  <div class="form-group row">
	    <div class="col-md-3">
        <%= f.label :tag_list, 'タグ' %>
      </div>
      <div class="col-md-4">
        <p>(複数の場合は,区切りで入力してください)</p>
		    <%= f.text_field :tag_list, value: @post.tag_list.join(','),class: 'form-control' %>
      </div>
	  </div>
	  <div class="form-group row">
	    <div class="col-md-3">
	      <%= f.label :title, 'タイトル' %>
      </div>
      <div class="col-md-6">
	      <%= f.text_field :title,class: 'form-control' %>
      </div>
	  </div>
	  <div class="form-group row">
	    <div class="col-md-3">
		    <%= f.label :text, '本文' %>
      </div>
      <div class="col-md-9">
		    <%= f.text_area :text,class: 'form-control' %>
      </div>
  	</div>
      <%= f.submit '投稿',class: 'btn btn-outline-dark' %>
  <% end %>
</div>