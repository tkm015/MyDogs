<div class="container">
   <% if @image == "image" %>
   <h1>投稿一覧＞写真一覧 </h1>
   <% elsif @video == "video" %>
   <h1>投稿一覧＞動画一覧 </h1>
   <% else %>
   <h1>すべての投稿</h1>
   <% end %>
<div class="row">
 <% @posts.each do |post| %>
 <div class="card button m-2 w-23">
 <% if post.image? %>
   <%= image_tag post.image.thumb.url, alt: '画像'%>
   <% else %>
      <%= video_tag post.video.url%>
   <% end %>
   <div class="card-body ">
   <%= image_tag post.dog.cover_image.thumb.url %>
   <% if post.dog.sex == "男の子" %>
   <%= link_to "#{post.dog.name}",public_dog_path(post) %>くん
   <% else %>
   <%= link_to "#{post.dog.name}",public_dog_path(post) %>ちゃん
   <% end %>
   <div class="card-title text-center">
      <%= link_to "#{post.title}",public_post_path(post) %>
   </div>
   <ul class="list-group list-group-flush">
      <li class="list-group-item text-center">
   <%= render 'public/posts/favorite', post: post %>
</li>
<li class="list-group-item text-center">
   <%= post.updated_at.strftime("%Y-%m-%d %H:%M") %>
</li>
</ul>
   </div>
</div>
 <% end %>
</div>
</div>
